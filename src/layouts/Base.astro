---
import '../styles/global.css';
import { SiteNavBar } from '../components/ui/site-navbar';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Make local LLMs punch above their weight. Intelligent scaffolding for AI coding assistants.' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="dark">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <meta name="description" content={description} />
  <meta name="generator" content={Astro.generator} />

  <!-- Open Graph -->
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:type" content="website" />
  <meta property="og:url" content={Astro.url} />
  <meta property="og:site_name" content="Context Mirror" />

  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />

  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&family=JetBrains+Mono:wght@400;500;600&display=swap" rel="stylesheet" />

  <title>{title}</title>
</head>
<body class="bg-surface-950 text-surface-100 font-sans antialiased">
  <!-- Navigation -->
  <SiteNavBar client:only="react" />

  <main class="pt-4 sm:pt-16 pb-20 sm:pb-0">
    <slot />
  </main>

  <!-- Footer -->
  <footer class="border-t border-white/5 bg-surface-950">
    <div class="mx-auto max-w-7xl px-6 py-16">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        <div class="col-span-2 md:col-span-1">
          <a href="/" class="flex items-center gap-3 text-lg font-semibold text-white">
            <img src="/logo-dark.svg" alt="" class="h-7 w-7" />
            Context Mirror
          </a>
          <p class="mt-4 text-sm text-surface-500 leading-relaxed">
            Making local LLMs punch above their weight.
          </p>
        </div>
        <div>
          <h4 class="text-sm font-semibold text-white mb-4">Products</h4>
          <ul class="space-y-2 text-sm text-surface-500">
            <li><a href="/#features" class="hover:text-white transition-colors">Context Mirror</a></li>
            <li><a href="/voice-mirror/" class="hover:text-white transition-colors">Voice Mirror</a></li>
          </ul>
        </div>
        <div>
          <h4 class="text-sm font-semibold text-white mb-4">Resources</h4>
          <ul class="space-y-2 text-sm text-surface-500">
            <li><a href="/docs/introduction/" class="hover:text-white transition-colors">Documentation</a></li>
            <li><a href="/blog/" class="hover:text-white transition-colors">Blog</a></li>

          </ul>
        </div>
        <div>
          <h4 class="text-sm font-semibold text-white mb-4">Community</h4>
          <ul class="space-y-2 text-sm text-surface-500">
            <li><a href="https://github.com/contextmirror" class="hover:text-white transition-colors">GitHub</a></li>
            <li><a href="mailto:contextmirror@proton.me" class="hover:text-white transition-colors">Contact</a></li>
          </ul>
        </div>
      </div>
      <div class="mt-12 pt-8 border-t border-white/5 text-sm text-surface-600">
        &copy; {new Date().getFullYear()} Context Mirror. All rights reserved.
      </div>
    </div>
  </footer>

</body>
</html>
