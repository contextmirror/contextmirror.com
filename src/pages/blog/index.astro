---
import Base from '../../layouts/Base.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);
---

<Base title="Blog â€” Context Mirror" description="News, updates, and insights from the Context Mirror team.">
  <section class="py-24">
    <div class="mx-auto max-w-4xl px-6">
      <h1 class="text-4xl md:text-5xl font-bold tracking-tight mb-4">Blog</h1>
      <p class="text-lg text-surface-200 mb-12">News, updates, and insights from the Context Mirror team.</p>

      <div class="space-y-8">
        {posts.map((post) => (
          <a href={`/blog/${post.id}/`} class="glow-hover block group rounded-2xl border border-white/5 bg-surface-900/30 p-8 hover:bg-surface-900/50 transition-all">
            <time class="text-sm text-surface-700">{new Date(post.data.date).toLocaleDateString('en-GB', { year: 'numeric', month: 'long', day: 'numeric' })}</time>
            <h2 class="mt-2 text-2xl font-semibold text-white group-hover:text-primary-400 transition-colors">{post.data.title}</h2>
            <p class="mt-2 text-surface-200">{post.data.description}</p>
          </a>
        ))}
      </div>
    </div>
  </section>
</Base>
